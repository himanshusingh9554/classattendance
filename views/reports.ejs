<!DOCTYPE html>
<html>
<head>
    <title>Attendance Reports</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="header">
        <h1>Attendance Reports</h1>
    </div>

    <div class="container">
        <% if (isEmpty) { %>
            <div class="no-data">
                <img src="/images/no-data.svg" alt="No data" width="100">
                <h3>No attendance records found</h3>
                <p>No attendance has been marked yet</p>
            </div>
        <% } else { %>
            <% Object.entries(reports).forEach(([date, records]) => { %>
                <div class="report-date">
                    <h3>ðŸ“… <%= new Date(date).toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %></h3>
                    <ul class="attendance-list">
                        <% records.forEach(record => { %>
                            <li class="student-item status-<%= record.status.toLowerCase() %>">
                                <span><%= record.student %></span>
                                <span class="status"><%= record.status %></span>
                            </li>
                        <% }); %>
                    </ul>
                </div>
            <% }); %>
        <% } %>

        <div class="actions">
            <a href="/" class="button">Back to Attendance</a>
        </div>
    </div>
</body>
</html>